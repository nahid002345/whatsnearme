<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:background="@drawable/pressed_state"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="clip_vertical"
            android:paddingLeft="2dp"
            android:paddingTop="2dp">
            <TextView android:id="@+id/txt_place_ref"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_place_name"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@+id/rl_img">
            <com.diordna.whats.near.me.font.RobotoTextView
                android:id="@+id/txt_place_name"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:textColor="#6e2d17"
                android:textSize="18sp"
                android:text="XXXXXXXXXXX"
                android:layout_height="wrap_content"/>
            <com.diordna.whats.near.me.font.RobotoTextView
                android:id="@+id/txt_area_name"
                android:visibility="visible"
                android:layout_below="@+id/txt_place_name"
                android:layout_width="wrap_content"
                android:textColor="#060606"
                android:textSize="15sp"
                app:typeface="robotoLight"
                android:text="XXXXXXXXXXX"
                android:layout_height="wrap_content"/>
            <com.diordna.whats.near.me.font.RobotoTextView
                android:id="@+id/txt_full_address"
                android:visibility="visible"
                android:layout_below="@+id/txt_area_name"
                android:layout_width="wrap_content"
                android:textSize="10sp"
                app:typeface="robotoLight"
                android:textColor="#686868"
                android:text="XXXXXXXXXXX"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </RelativeLayout>

